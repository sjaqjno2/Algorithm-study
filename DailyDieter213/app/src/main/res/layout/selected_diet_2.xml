<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/big_f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/feb" />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/idDietTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="February"
                android:textColor="@color/white"
                android:textSize="32dp" />


            <TextView
                android:id="@+id/heightDietTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="February"
                android:textColor="@color/white"
                android:textSize="14dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <!-- Graph 1-->

                <FrameLayout
                    android:id="@+id/fl1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1">


                    <!-- Here is fit chart ... You can set width by  app:strokeSize-->
                    <com.txusballesteros.widgets.FitChart


                        android:id="@+id/big1"
                        android:layout_width="200px"
                        android:layout_height="200px"

                        android:layout_gravity="center"
                        app:animationMode="overdraw"
                        app:backStrokeColor="#d8d8d8"
                        app:strokeSize="4dp"


                        />

                    <TextView
                        android:id="@+id/big1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:text="28 %"
                        android:textColor="@color/yellow"
                        android:textSize="20dp" />


                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fl1"
                    android:layout_marginLeft="82dp"
                    android:text="Salt"
                    android:textColor="@color/white"
                    android:textColorLink="@android:color/holo_purple"
                    android:textSize="20sp" />

                <!-- Graph 2-->

                <FrameLayout
                    android:id="@+id/fl2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/fl1"
                    android:layout_weight="1">


                    <!-- Here is fit chart ... You can set width by  app:strokeSize-->
                    <com.txusballesteros.widgets.FitChart


                        android:id="@+id/big2"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_gravity="center"
                        app:animationMode="overdraw"
                        app:backStrokeColor="#d8d8d8"
                        app:strokeSize="4dp" />

                    <TextView
                        android:id="@+id/big2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:text="54 %"
                        android:textColor="@color/yellow"
                        android:textSize="20dp" />


                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fl2"
                    android:layout_marginLeft="250dp"
                    android:text="Calorie"
                    android:textColor="@color/white"
                    android:textColorLink="@android:color/holo_purple"
                    android:textSize="20sp" />


            </RelativeLayout>


        </LinearLayout>


        <ListView
            android:id="@+id/listDiet"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@+id/lin"
            android:layout_marginTop="220dp"></ListView>


    </FrameLayout>


    <LinearLayout
        android:id="@+id/threebutton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/updateDietButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="UPDATE" />

        <Button
            android:id="@+id/deleteDietButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/Camera_Execution"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:text="DELETE" />

    </LinearLayout>
</RelativeLayout>