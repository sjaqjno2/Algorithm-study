<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_wish_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.doo.dailydieter.MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/wish_list_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/listlayoutDivider"
        app:menu="@menu/wish_navigation" />

    <FrameLayout
        android:id="@+id/frame_layout_wish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wish_list_navigation"
        android:animateLayoutChanges="true">

    </FrameLayout>



</RelativeLayout>